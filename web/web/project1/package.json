{
  "name": "abaplint-editor-fiori",
  "version": "1.0.0",
  "description": "ABAP Lint Editor as Fiori Application",
  "private": true,
  "keywords": [
    "ui5",
    "openui5",
    "sapui5"
  ],
  "main": "webapp/index.html",
  "scripts": {
    "start": "fiori run --open \"test/flp.html#app-preview\"",
    "start-local": "fiori run --config ./ui5-local.yaml --open \"test/flp.html#app-preview\"",
    "start-noflp": "fiori run --open \"/index.html?sap-ui-xx-viewCache=false\"",
    "start-mock": "fiori run --config ./ui5-mock.yaml --open \"test/flp.html#app-preview\"",
    "preview": "fiori run --open \"preview.html\"",
    "preview-flp": "fiori run --open \"test/flp.html#app-preview\"",
    "preview-standalone": "fiori run --open \"index.html\"",
    "preview-adaptation": "fiori run --open \"preview.html?fiori-tools-rta-mode=true&sap-ui-rta-skip-flex-validation=true\"",
    "preview-variants": "fiori run --open \"preview.html#app-preview\"",
    "preview-local": "fiori run --config ./ui5-local.yaml --open \"preview.html\"",
    "preview-mock": "fiori run --config ./ui5-mock.yaml --open \"preview.html\"",
    "build": "ui5 build --config=ui5.yaml --clean-dest --dest dist",
    "build-opt": "ui5 build --config=ui5.yaml --clean-dest --dest dist --all",
    "lint": "eslint ./",
    "ts-typecheck": "tsc --noEmit",
    "prestart": "npm run ts-typecheck",
    "prebuild": "npm run ts-typecheck",
    "deploy": "npm run build && fiori deploy --config ui5-deploy.yaml",
    "deploy-config": "fiori add deploy-config",
    "deploy-test": "npm run build && fiori deploy --config ui5-deploy.yaml --testMode true",
    "undeploy": "npm run build && fiori undeploy --config ui5-deploy.yaml",
    "int-test": "fiori run --config ./ui5-mock.yaml --open \"test/integration/opaTests.qunit.html\"",
    "unit-test": "fiori run --config ./ui5-mock.yaml --open \"test/unit/unitTests.qunit.html\""
  },
  "dependencies": {
    "@abaplint/core": "^2.115.17",
    "@abaplint/monaco": "^2.115.17"
  },
  "devDependencies": {
    "@openui5/sap.m": "^1.144.0",
    "@openui5/sap.ui.core": "^1.144.0",
    "@openui5/sap.ui.fl": "^1.144.0",
    "@openui5/sap.ui.layout": "^1.144.0",
    "@sap-ux/eslint-plugin-fiori-tools": "^0.4.0",
    "@sap-ux/ui5-middleware-fe-mockserver": "2",
    "@sap/ux-ui5-tooling": "1",
    "@sapui5/types": "~1.120.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@ui5/cli": "^4.0.16",
    "nwabap-ui5uploader": "^1.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.1.6",
    "ui5-tooling-transpile": "^3.3.7"
  },
  "ui5": {
    "dependencies": [
      "@sap/ux-ui5-tooling"
    ]
  },
  "sapuxLayer": "CUSTOMER_BASE"
}
